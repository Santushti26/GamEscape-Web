<!DOCTYPE html> 
<!-- team form -->
<html lang="en">
    <head>
        <title>Form</title>
        <link rel="stylesheet" href="css/teamForm.css" />
    </head>
    <body>
        <video
            class="frame"
            autoplay
            muted
            loop
            src="                
                position: absolute;
                margin: 0;
                left: 0;
                top: 0;
                z-index: -1;
                height: 100%;
                "
        >
            <source src="resources/CSGO Animation.mp4" type="video/mp4" />
        </video>
        <script>
            setInterval(() => window.scrollTo(0, 0), 0);
        </script>
        <!-- <img src="resources/Frame 52.svg" class="frame" /> -->
        <form action="/createPlayerCSGO" method="post" id="form">
            <div class="form">
                <h1>Join CSGO Team</h1>
                <div class="formField">
                    <input
                        id="fullName"
                        name="fullName"
                        type="text"
                        placeholder="Full Name"
                        required
                    />
                </div>
                <div class="formField">
                    <input
                        id="regno"
                        name="RegistrationNumber"
                        type="text"
                        placeholder="Registration Number"
                        required
                    />
                </div>
                <div class="formField">
                    <input
                        id="mail"
                        name="VitMail"
                        type="text"
                        placeholder="Vit Mail"
                        required
                    />
                </div>
                <div class="formField">
                    <input
                        id="rank"
                        name="rank"
                        type="text"
                        placeholder="Rank"
                    />
                </div>
                <div class="formField">
                    <input
                        id="gameId"
                        name="gameId"
                        type="text"
                        placeholder="Steam profile link"
                        required
                    />
                </div>
                <div class="formField">
                    <input
                        id="discord"
                        name="discord"
                        type="text"
                        placeholder="Discord ID"
                        required
                    />
                </div>
                <div class="formField">
                    <input
                        id="phno"
                        name="phoneNumber"
                        type="tel"
                        placeholder="Phone Number"
                        required
                    />
                </div>
                <div class="formField">
                    <input
                        id="teamName"
                        name="teamName"
                        type="text"
                        placeholder="Team Name"
                        required
                    />
                </div>

                <div class="buttons">
                    <button id="joinTeam">Create Team</button>
                    <script>
                        document.getElementById("joinTeam").onclick =
                            function () {
                                window.location.href = "/CSGOCreateTeam";
                            };
                    </script>
                    <button name="submit" type="submit" form="form">
                        Submit
                    </button>
                </div>
            </div>
        </form>
    </body>
</html>
