<!DOCTYPE html>
<html lang="en">
    <head>
        <title>Form</title>
        <link rel="stylesheet" href="css/teamForm.css" />
    </head>
    <body>
        <img src="resources/frame.png" alt="frame" class="frame">
        <form action="/CSGOSolo" method="post" id="form">
            <div class="form">
            <div class="formField">
                <input
                    id="fullName"
                    name="fullName"
                    type="text"
                    placeholder="Full Name"
                    required
                />
            </div>
            <div class="formField">
                <input
                    id="regno"
                    name="RegistrationNumber"
                    type="text"
                    placeholder="Registration Number"
                    required
                />
            </div>
            <div class="formField">
                <input
                    id="mail"
                    name="VitMail"
                    type="text"
                    placeholder="Vit Mail"
                    required
                />
            </div>
            <div class="formField">
                <input id="rank" name="rank" type="text" placeholder="Rank" />
            </div>
            <div class="formField">
                <input
                    id="gameId"
                    name="gameId"
                    type="text"
                    placeholder="Riot ID"
                    required
                />
            </div>
            <div class="formField">
                <input
                    id="discord"
                    name="discord"
                    type="text"
                    placeholder="Steam ID"
                    required
                />
            </div>
            <div class="formField">
                <input
                    id="phno"
                    name="phoneNumber"
                    type="tel"
                    placeholder="Phone Number"
                    required
                />
            </div>
            <div class="buttons">
            <button name="submit" type="submit" form="form">Submit</button>
            </div>
        </div>
        </form>
    </body>
</html>