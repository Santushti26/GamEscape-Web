<!DOCTYPE html>
<html lang="en">
    <head>
        <title>Form</title>
        <link rel="stylesheet" href="css/valo.css" />
    </head>
    <body>
        <video class="frame" autoplay muted loop>
            <source src="resources/Valorant Animation.mp4" type="video/mp4" />
        </video>
        <!-- <img
            src="resources/valoAshiqui.svg"
            style="position: absolute; bottom: 0; left: 10%; height: 50%"
        /> -->
        <form action="/ValorantSolo" method="post" id="form">
            <h1>Play Valorant Solo</h1>
            <div class="formField">
                <input
                    id="fullName"
                    name="fullName"
                    type="text"
                    placeholder="Full Name"
                    required
                />
            </div>
            <div class="formField">
                <input
                    id="regno"
                    name="RegistrationNumber"
                    type="text"
                    placeholder="Registration Number"
                    required
                />
            </div>
            <div class="formField">
                <input
                    id="mail"
                    name="VitMail"
                    type="text"
                    placeholder="Vit Mail"
                    required
                />
            </div>
            <div class="formField">
                <input id="rank" name="rank" type="text" placeholder="Rank" />
            </div>
            <div class="formField">
                <input
                    id="gameId"
                    name="gameId"
                    type="text"
                    placeholder="Riot ID"
                    required
                />
            </div>
            <div class="formField">
                <input
                    id="discord"
                    name="discord"
                    type="text"
                    placeholder="Discord ID"
                    required
                />
            </div>
            <div class="formField">
                <input
                    id="phno"
                    name="phoneNumber"
                    type="tel"
                    placeholder="Phone Number"
                    required
                />
            </div>
            <div class="buttons">
                <button name="submit" type="submit" form="form">Submit</button>
            </div>
        </form>
    </body>
</html>
